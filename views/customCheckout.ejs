<html lang="en">
    <%- include('./partials/head.ejs') %>

    <body>
        <div class="checkout-container">
            <h1 class="checkout-title">Checkout</h1>
    
            <!-- User Info Card -->
            <div class="checkout-card user-info-card">
                <h2>User Information</h2>
                <p><strong>Full Name:</strong> <%= user.fullName %></p>
                <p><strong>Email:</strong> <%= user.email %></p>
                <p><strong>Phone:</strong> <%= user.phone %></p>
            </div>

            <!-- Order Summary Card -->
            <div class="checkout-card order-summary-card">
                <h2>Order Summary</h2>
                <p><strong>Occasion:</strong> <%= customOrder.occasion %></p>
                <p><strong>Cake Size:</strong> <%= customOrder.size %></p>
                <p><strong>Cake tier(s):</strong> <%= customOrder.tiers %></p>
                <p><strong>Cake Shape:</strong> <%= customOrder.shape %></p>
                <p><strong>Flavor:</strong> <%= customOrder.flavor %></p>
                <p><strong>Fillings:</strong> <%= customOrder.fillings %></p>
                <p><strong>Icing:</strong> <%= customOrder.icing %></p>
                <p><strong>Decorations:</strong> <%= customOrder.decorations %></p>
                <p><strong>Themes details:</strong> <%= customOrder.decorationDetails %></p>
                <p><strong>Type of candles:</strong> <%= customOrder.candles %></p>
                <p><strong>Age sign:</strong> <%= customOrder.ageSign %></p>
                <p><strong>Age specified:</strong> <%= customOrder.ageDetails %></p>
                <p><strong>Text on cake:</strong> <%= customOrder.textOnCake %></p>
                <p><strong>Text Details:</strong> <%= customOrder.cakeTextDetails %></p>
                <p><strong>Delivery/Pickup:</strong> <%= customOrder.deliveryOrPickup %></p>
                <p><strong>Date of Delivery/Pickup:</strong> <%= customOrder.deliveryDate %></p>
                <p><strong>Additional Details:</strong> <%= customOrder.additionalDetails %></p>
            </div>

            <div id="map" style="height: 400px; width: 100%;"></div>

            <div class="location-container">
                <label for="address">Selected Address:</label>
                <input type="text" id="address" name="address" placeholder="Select location or type manually">
            
                <label for="latitude">Latitude:</label>
                <input type="text" id="latitude" name="latitude" readonly>
            
                <label for="longitude">Longitude:</label>
                <input type="text" id="longitude" name="longitude" readonly>
            </div>

            <button class="confirm-location" id="confirmed-location">Confirm Location</button>

            <button id="confirmOrder" class="checkout-button">Confirm Order</button>
        </div>

        <!-- Custom Order Confirmation Modal -->
        <div id="orderConfirmationModal" class="confirmation-modal ">
            <div class="confirmation-modal-content">
                <p>We have received your custom order. You will receive an email shortly with the price and payment details.</p>
                <button id="closeModal" class="okay-button" >Okay</button>
            </div>
        </div>

        <script src="/scripts/customCheckout.js"></script>
    </body>
</html>