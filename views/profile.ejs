<html lang="en">
    <%- include('./partials/head.ejs') %>

    <body>
        <%- include('./partials/nav.ejs') %>
    
        <%- include('./partials/modals.ejs') %>

        <%- include('./partials/cookies.ejs') %>
        
        <div class="profile-container">
            <div class="profile-logo">
                <img src="/images/profile-icon.png" alt="Profile Picture">
            </div>
        </div>

        <p class="update-restriction">⚠️ Changes can only be made once in a month!</p>

        <form id="profile-form" class="profile-form">
            <label for="name">Full Name</label>
            <input type="text" id="name" name="name" required>
    
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required>
    
            <label for="phoneNumber">Phone Number (Optional)</label>
            <input type="text" id="phoneNumber" name="phoneNumber" placeholder="08034621475">

            <label for="address">Address</label>
            <input type="text" id="address" name="address" placeholder="house no.6b, katampe estate, phase 2, Kado, Abuja">
    
            <p id="error-message" class="error-message"></p>

            <button id="save-changes" type="submit">Save Changes</button>
        </form>

        <div class="delete-account-section">
            <h2 class="delete-title">Delete Account</h2>
            <p class="delete-description">You will lose access to your Doughnut Delight account once your deletion request has been submitted.</p>
            <button id="deleteAccountBtn" class="delete-button">Delete Account</button>
        </div>
    
        <script src="/scripts/profile.js"></script>
    </body>

</html>
